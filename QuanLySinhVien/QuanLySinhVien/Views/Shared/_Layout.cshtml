<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<style>
    body {
        background-color: blue;
        background-image: url('https://png.pngtree.com/thumb_back/fh260/background/20200714/pngtree-modern-double-color-futuristic-neon-background-image_351866.jpg');
        background-repeat: no-repeat;
        background-size: cover
    }
    h1,h2,h3,h4,h5,h6{
        color:white
    }
    th, tr, td {
        color: white
    }
    label{
        color:#fff;
    }
    dl,dt,dd{
        color:#fff;
    }
</style>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Quản lý sinh viên", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Chuyên ngành", "Index", "chuyennganhs")</li>
                    <li>@Html.ActionLink("Khoa", "Index", "Khoas")</li>
                    <li>@Html.ActionLink("Lớp", "Index", "LopHocs")</li>
                    <li>@Html.ActionLink("Đăng Kí", "DangKiTaiKhoan", "Account")</li>
                    <li>@Html.ActionLink("Thoát", "Logout", "Account")</li>
                    <li>@Html.ActionLink("Đăng Nhập", "Login", "Account")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <img src="https://humg.edu.vn/Publishing_Resources/web/images/logo.png" style="margin-left:38%;margin-top:40px" /> 
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
